<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.masfendi.instablog.BlogSingleActivity">

    <ImageView
        android:id="@+id/singleBlogImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/add_image" />

    <TextView
        android:id="@+id/singleBlogTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/singleBlogImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/singleBlogDescView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/singleBlogTitleView"
        android:layout_below="@+id/singleBlogTitleView"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <Button
        android:id="@+id/singleBlogRemoveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:text="Remove"
        android:textColor="@color/putih"
        android:textSize="18sp" />
</RelativeLayout>
